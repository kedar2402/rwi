import matplotlib.pyplot as plt import numpy as np
# change in (1)so that we will get the change away from bump
# make data
x = np. linspace (0.4 , 1.6 , 128)
Sig = 1+ ((0.109) ∗ np.exp((−(x−1)∗∗2/0.05)))
# plot
fig, ax=plt.subplots() ax.plot(x, Sig, linewidth=2.0)
ax.set(xlim=(0, 2), xticks=np.arange(0,2, 0.2) ) plt . grid ()
plt . title (”Total plt . ylabel (”Total plt.xlabel(”r”)
plt .show()
